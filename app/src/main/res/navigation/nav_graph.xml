<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="edu.uw.yuanrz.dotify.fragment.ProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="edu.uw.yuanrz.dotify.fragment.AboutFragment"
        android:label="About Page"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="edu.uw.yuanrz.dotify.fragment.StatisticsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_statistics">
        <argument
            android:name="song_object"
            app:argType="com.ericchee.songdataprovider.Song" />
        <argument
            android:name="play_count"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="edu.uw.yuanrz.dotify.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <argument
            android:name="song_object"
            app:argType="com.ericchee.songdataprovider.Song" />
        <argument
            android:name="play_count"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_statisticsFragment"
        app:destination="@id/statisticsFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <action
        android:id="@+id/action_global_aboutFragment"
        app:destination="@id/aboutFragment" />
</navigation>